<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Store:etc/config.xsd">
    <default>
        <dailydeal>
            <general>
                <enabled>1</enabled>
                <show_qty_remain>1</show_qty_remain>
                <show_qty_sold>1</show_qty_sold>
                <countdown_timer>
                    <show_countdown_timer>1</show_countdown_timer>
                    <countdown_outer_color>#00BF96</countdown_outer_color>
                    <countdown_inner_color>#00816A</countdown_inner_color>
                    <countdown_text>#FFFFFF</countdown_text>
                </countdown_timer>
                <discount_label>
                    <show_discount_label>1</show_discount_label>
                    <content_label>{{number}}% OFF</content_label>
                    <round_percent>1</round_percent>
                    <show_on>1</show_on>
                    <label_bg_color>#FFFFFF</label_bg_color>
                    <label_border_color>#61A969</label_border_color>
                    <label_text_color>#61A969</label_text_color>
                </discount_label>
            </general>
            <deal_pages>
                <all_deals>
                    <enabled>0</enabled>
                    <route>alldeals</route>
                    <title>All Deals</title>
                </all_deals>
                <new_deals>
                    <enabled>0</enabled>
                    <route>newdeals</route>
                    <title>New Deals</title>
                </new_deals>
                <best_deals>
                    <enabled>0</enabled>
                    <route>sellerdeals</route>
                    <title>BestSeller Deals</title>
                </best_deals>
                <featured_deals>
                    <enabled>0</enabled>
                    <route>featuredeals</route>
                    <title>Featured Deals</title>
                </featured_deals>
            </deal_pages>
            <sidebar_widget>
                <qty_remain>1</qty_remain>
                <qty_sold>1</qty_sold>
                <float_deal>
                    <show_mobile>1</show_mobile>
                </float_deal>
            </sidebar_widget>
        </dailydeal>
    </default>
</config>
