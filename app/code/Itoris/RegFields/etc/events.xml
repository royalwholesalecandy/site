<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="customer_customer_authenticated">
        <observer name="itoris_regfields1" instance="Itoris\RegFields\Observers\AddCustomOptionToCustomAuthenticated" />
    </event>
    <event name="customer_load_after">
        <observer name="itoris_regfields2" instance="Itoris\RegFields\Observers\AddCustomOptionsToCustomer" />
    </event>

    <event name="adminhtml_customer_save_after">
        <observer name="itoris_regfields3" instance="Itoris\RegFields\Observers\SaveCustomOptions" />
    </event>
</config>