<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:Event/etc/events.xsd">
    <event name="controller_front_init_before">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\FixOverride" />
    </event>
    <event name="customer_save_after">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Save\SaveCustomer" />
    </event>
    <event name="adminhtml_customer_prepare_save">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Save\SetItorisFlag" />
    </event>
    <event name="customer_login">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Login\CheckLoginAbility" />
    </event>
    <event name="controller_action_predispatch_customer_account_createpost">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Register\SendEmails" />
    </event>
    <event name="customer_register_success">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Register\RegisterSuccess" />
    </event>
    <event name="admin_system_config_changed_section_itoris_pendingreg">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Config\CustomergroupsPost" />
    </event>
    <event name="itoris_regfields_pendigs_error">
        <observer name="itoris_pendingregistration" instance="Itoris\PendingRegistration\Observers\Register\PendingRegFIelds" />
    </event>
</config>