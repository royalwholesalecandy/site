<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="../../../Config/etc/system_file.xsd">
<system>
<!-- Add new Tab -->
   <section id="brand_section" translate="label" type="text" sortOrder="100" showInDefault="1" showInWebsite="1" showInStore="1">
     <label>Brand Settings</label>
       <tab>wanexo_ext</tab>
        <resource>Wanexo_Brand::config_brand</resource>
			<group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
				<label>General</label>
				  <field id="enable" translate="label" type="select" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Enable</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				 </field>
				 <field id="sortname" translate="label" type="select" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Brands Sort Order</label>
					<source_model>Wanexo\Brand\Model\Config\Source\Sortorder</source_model>
				 </field>
			</group>
			
			<group id="home_settings" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">    
				<label>Home Brand Settings</label>
				<field id="title" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Brand Title for home page</label>
					<comment>Brnad Title for home page.</comment>
				</field>
				<field id="showno_brand" translate="label" type="text" sortOrder="2" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Show No Of Brands</label>
					<comment>show no of brands</comment>
				</field>
				<field id="showon_row" translate="label" type="text" sortOrder="3" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Show Brands In Row</label>
					<comment>show no of brands in a row.</comment>
				</field>
				<field id="autoplay" translate="label" type="select" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Slider auto play</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
					<comment>Slider auto play on off.</comment>
				</field>
				<field id="brandname" translate="label" type="select" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Show Brand Name</label>
					<source_model>Wanexo\Brand\Model\Config\Source\Brandname</source_model>
				</field>
				<field id="pagination" translate="label" type="select" sortOrder="11" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Show Pagination</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
				<field id="nvg" translate="label" type="select" sortOrder="12" showInDefault="1" showInWebsite="1" showInStore="1">
					<label>Show Navigation</label>
					<source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
				</field>
			</group>
		</section>
</system>
</config>