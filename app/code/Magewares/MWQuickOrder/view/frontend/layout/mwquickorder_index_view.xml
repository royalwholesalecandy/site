<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" layout="2columns-left" xsi:noNamespaceSchemaLocation="../../../../../../../lib/internal/Magento/Framework/View/Layout/etc/page_configuration.xsd">
	<update handle="catalog_product_view"/>
    <body>
        <referenceBlock name="catalog.product.related" remove="true"/>
        <referenceBlock name="product.info.upsell" remove="true"/>
        <referenceBlock name="header.container" remove="true"/>
        <referenceBlock name="footer-container" remove="true"/>
        <referenceBlock name="page.top" remove="true" />
        <referenceBlock name="copyright" remove="true" />
        <referenceBlock name="authentication-popup" remove="true" />
		<referenceBlock name="product.info.review" remove="true" />
		<referenceBlock name="product.info.addto" remove="true" />
		<referenceBlock name="product.info.overview" remove="true" />
		<referenceBlock name="product.info.details" remove="true" />
		<referenceBlock name="product.info.mailto" remove="true" />
		<referenceBlock name="product.info.addtocart" remove="true" />
		<referenceBlock name="related.product.addto.compare" remove="true"/>
		<referenceBlock name="product.info.options.wrapper.bottom" remove="true"/>
		<referenceBlock name="product.info.addtocart" remove="true"/>
		
		<referenceContainer name="product.info.main">
			<block class="Magento\Framework\View\Element\Template" name="product.quickorder.info" as="product.quickorder.info" after="customize_button" template="Magewares_MWQuickOrder::continue.phtml"/>
		</referenceContainer>
    </body>
</page>