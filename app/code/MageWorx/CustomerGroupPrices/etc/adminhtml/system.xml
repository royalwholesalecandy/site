<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="mageworx" translate="label" sortOrder="2510">
            <label>MageWorx</label>
        </tab>
        <section id="mageworx_customergroupprices" translate="label" type="text" sortOrder="10" showInDefault="1" showInWebsite="1" showInStore="1">
