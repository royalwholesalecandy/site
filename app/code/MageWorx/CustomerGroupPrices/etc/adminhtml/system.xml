                       showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Enabled Customer Group Prices</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
                <field id="enabled_group_price_in_catalog_price_rule" translate="label" type="select" sortOrder="20" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Used Group Price In Catalog Price Rule</label>
                    <source_model>Magento\Config\Model\Config\Source\Yesno</source_model>
                </field>
