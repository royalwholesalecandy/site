    <script type="text/javascript">
        function plusQty(qtyInput){
                require([
                'jquery'
                ], function(jQuery){
                        (function($) {
                                if($('#'+qtyInput).attr('disabled')!='disabled'){
                                        qty = $('#'+qtyInput).attr('value');
                                        qty = parseInt(qty);
                                        qty++;
                                        $('#'+qtyInput).val(qty);
                                }
                        })(jQuery);
                });

        }
        function minusQty(qtyInput){
                require([
                'jquery'
                ], function(jQuery){
                        (function($) {
                                if($('#'+qtyInput).attr('disabled')!='disabled'){
                                        qty = $('#'+qtyInput).attr('value');
                                        qty = parseInt(qty);

                                        if(qty>1){
                                                qty--;
                                                $('#'+qtyInput).val(qty);
                                        }
                                }
                        })(jQuery);
                });
        }
